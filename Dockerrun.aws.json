{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
			"name": "client",
			"image": "sayak1992docker/multi-client",
			"hostname": "client",
			"essential": false
		},
		{
			"name": "nginx",
			"image": "sayak1992docker/multi-nginx",
			"essential": true,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}	
			],
			"links": ["client", "server"]	
		},
		{
			"name": "server",
			"image": "sayak1992docker/multi-server",
			"hostname": "api",
			"essential": false
		},
		{
			"name": "worker",
			"image": "sayak1992docker/multi-worker",
			"hostname": "worker",
			"essential": false
		}	
	]	
}
